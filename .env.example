# Disease Prediction App - Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Neon PostgreSQL connection string (get from Neon dashboard)
NEON_DATABASE_URL=postgresql://neondb_owner:npg_FjZL9fEKHi2r@ep-withered-truth-ahlvd1g4-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Alternative: Local PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/disease_prediction

# ============================================================================
# JWT SECURITY CONFIGURATION
# ============================================================================
# IMPORTANT: Generate a strong random secret for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-key-minimum-32-characters-long

# JWT algorithm (HS256 recommended for most cases)
JWT_ALGORITHM=HS256

# Token expiration in seconds (3600 = 1 hour)
# Shorter is more secure but less convenient
JWT_EXPIRES_SECONDS=3600

# ============================================================================
# MODEL PATHS
# ============================================================================
# Path to the trained disease prediction model
MODEL_PATH=Project/model/disease_model.pkl

# Path to the symptom list pickle file
SYMPTOM_LIST_PATH=Project/model/symptom_list.pkl

# Path to the data directory containing CSVs
DATA_DIR=Project/data

# ============================================================================
# CORS SECURITY
# ============================================================================
# Allowed origins for CORS (comma-separated, no wildcards in production!)
# Example: http://localhost:3000,http://127.0.0.1:5500
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500

# ============================================================================
# SECURITY OPTIONS
# ============================================================================
# Enable additional security headers (true/false)
ENABLE_SECURITY_HEADERS=true

# Rate limiting - requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Maximum request body size in bytes (5MB)
MAX_BODY_SIZE=5242880

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# If you add email notifications or other services
# EMAIL_API_KEY=your-email-api-key
# EMAIL_FROM=noreply@yourdomain.com
